/* pages/movies/movie-detail/movie-detail.wxss */
@import "../stars/stars-template.wxss";

.container {
    display: flex;
    flex-direction: column;
}

.head-img {
    width: 100%;
    height: 320rpx;
    -webkit-filter: blur(10rpx);
}

.head-img-hover {
    display: flex;
    position: absolute;
    flex-direction: column;
    top: 0;
    left: 0;
    width: 100%;
    height: 320rpx;
}

/* .main-title,
.sub-title{
    margin-left: 40rpx;
    color: #fff;
} */

.main-title {
    font-size: 19px;
    margin-top: 50rpx;
    margin-left: 40rpx;
    font-weight: bold;
    letter-spacing: 2px;
    color: #fff;
}

.sub-title {
    font-size: 28rpx;
    margin-top: 30rpx;
    margin-left: 40rpx;
    color: #fff;
}

.like {
    display: flex;
    flex-direction: row;
    margin-top: 30rpx;
    margin-left: 40rpx;
}

.movie-img {
    position: absolute;
    top: 160rpx;
    right: 30rpx;
    height: 238rpx;
    width: 175rpx;
}

.highlight-font {
    color: #f21146;
    font-size: 22rpx;
    margin-right: 15rpx;
}

.plain-font {
    color: #666;
    font-size: 22rpx;
    margin-right: 30rpx;
}

.movie-img {
    position: absolute;
    top: 160rpx;
    right: 40rpx;
    height: 238rpx;
    width: 175rpx;
}

.summary {
    margin-left: 30rpx;
    margin-top: 30rpx;
    color: #777;
}

.original-title {
    margin-bottom: 40rpx;
    font-size: 24rpx;
    font-weight: bold;
    color: #1f3463;
}

.flex-fow {
    display: flex;
    margin-bottom: 10rpx;
}

.mark {
    margin-right: 30rpx;
    white-space: nowrap;
    color: #999;
}

.hr {
    margin-top: 45rpx;
    height: 1px;
    width: 100%;
    background: #d9d9d9;
}

.synopsis {
    display: flex;
    flex-direction: column;
    margin-top: 50rpx;
    margin-left: 40rpx;
    color: #777;
}

.summary {
    margin-top: 40rpx;
    margin-left: 40rpx;
    color: #777;
}

.summary-content {
    margin-top: 20rpx;
    margin-right: 40rpx;
    line-height: 40rpx;
    letter-spacing: 1px;
    overflow: auto;
}

.cast {
    display: flex;
    flex-direction: column;
    margin-left: 40rpx;
    margin-top: 50rpx;
    margin-right: 40rpx;
}

.cast-font {
    margin-bottom: 40rpx;
    color: #999;
}

.cast-container {
    display: inline-flex;
    flex-direction: column;
    margin-bottom: 50rpx;
    margin-right: 40rpx;
    width: 170rpx;
    text-align: center;
    white-space: normal;
}

.cast-imgs {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    white-space: nowrap;
}

.cast-img {
    width: 170rpx;
    height: 210rpx;
}

.cast-name {
    margin: 10rpx auto 0;
    word-break: break-all;
}
