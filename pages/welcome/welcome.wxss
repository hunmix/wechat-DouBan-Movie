page {
    height: 100%;
    background: #b3d4db;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.user-avatar {
    font-size: 35rpx;
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin-top: 150rpx;
}

.user-name {
    font-size: 35rpx;
    font-weight: bold;
    margin-top: 100rpx;
    color:#eee;
}
.user-name text{
    font-size: 32rpx;
}

.moto-container {
    width: 200rpx;
    height: 80rpx;
    text-align: center;
    border: 1px solid #eee;
    color: #eee;
    border-radius: 5px;
    margin-top: 100rpx;
}

.moto {
    font-size: 25rpx;
    font-weight: bold;
    line-height: 80rpx;
}
