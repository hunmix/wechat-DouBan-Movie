.collection-item-container{
    display: flex;
    height: 150rpx;
    padding:5rpx;
    padding-left: 15rpx;
    overflow: hidden;
    margin-bottom: 1px;
    background:#fff;
}
.img{
    width: 150rpx;
    height: 150rpx;
    border-radius: 5rpx;
}
.content-container{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 520rpx;
    margin-left: 30rpx;
    padding-top: 5rpx;
    padding-bottom:5rpx;
}
.content{
    display: inline-block;
     text-indent: 2em; 
    height: 65rpx;
    padding-right:10rpx;
    margin-top:10rpx;
    line-height: 35rpx;
    overflow: hidden;
}
.avatar-container{
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 20rpx;
    color: #666;
}
.avatar{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.author-container{
    display: flex;
    align-items: center;
}
.date{
    margin-right: 10rpx;
}