.collection-item-container {
    position: relative;
    height: 150rpx;
    padding: 5rpx;
    padding-left: 15rpx;
    padding-right: 0;
    overflow: hidden;
    margin-bottom: 1px;
    background: #fff;
}

.main-container {
    box-sizing: border-box;
    position: relative;
    display: flex;
    width: 100%;
    height: 100%;
    overflow: hidden;
    background: #fff;
    z-index: 2;
    transition: all .3s ease;
}

.img {
    width: 150rpx;
    height: 150rpx;
    border-radius: 5rpx;
}

.content-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 520rpx;
    margin-left: 30rpx;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
}

.content {
    display: inline-block;
    text-indent: 2em;
    height: 65rpx;
    padding-right: 10rpx;
    margin-top: 10rpx;
    line-height: 35rpx;
    overflow: hidden;
}

.avatar-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 20rpx;
    color: #666;
}

.avatar {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.author-container {
    display: flex;
    align-items: center;
}

.date {
    margin-right: 10rpx;
}

.delete-btn {
    position: absolute;
    top: 5rpx;
    right: 0;
    width: 150rpx;
    height: 150rpx;
    background: #e64340;
    color: #fff;
    text-align: center;
    line-height: 150rpx;
    font-size: 30rpx;
    border-radius: 3rpx;
}

